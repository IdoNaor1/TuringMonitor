{
  "name": "Ido3",
  "display": {
    "width": 320,
    "height": 480,
    "background_color": "#0A0A0A"
  },
  "update_interval_ms": 1000,
  "widgets": [
    {
      "type": "text",
      "id": "clock",
      "position": {
        "x": 10,
        "y": 20
      },
      "size": {
        "width": 300,
        "height": 70
      },
      "data_source": "time",
      "format": "%H:%M:%S",
      "font_size": 48,
      "color": "#00FFFF",
      "align": "center"
    },
    {
      "type": "text",
      "id": "date",
      "position": {
        "x": 10,
        "y": 95
      },
      "size": {
        "width": 300,
        "height": 25
      },
      "data_source": "date",
      "format": "%a, %b %d",
      "font_size": 16,
      "color": "#00FFFF",
      "align": "center"
    },
    {
      "type": "progress_bar",
      "id": "cpu",
      "position": {
        "x": 10,
        "y": 130
      },
      "size": {
        "width": 300,
        "height": 80
      },
      "data_source": "cpu_percent",
      "label": "CPU",
      "bar_color": "#00ff00",
      "background_color": "#1A1A1A",
      "text_color": "#00FFFF",
      "gradient": true,
      "gradient_end_color": "#ff0000",
      "border_width": 0,
      "border_color": "#FFFFFF",
      "corner_radius": 0,
      "show_percentage": true,
      "show_label": true
    },
    {
      "type": "progress_bar",
      "id": "ram",
      "position": {
        "x": 10,
        "y": 220
      },
      "size": {
        "width": 300,
        "height": 80
      },
      "data_source": "ram_percent",
      "label": "RAM",
      "bar_color": "#00FF00",
      "background_color": "#1A1A1A",
      "text_color": "#00FFFF",
      "gradient": true,
      "gradient_end_color": "#ff0000",
      "border_width": 0,
      "border_color": "#FFFFFF",
      "corner_radius": 0,
      "show_percentage": true,
      "show_label": true
    },
    {
      "type": "progress_bar",
      "id": "disk",
      "position": {
        "x": 10,
        "y": 310
      },
      "size": {
        "width": 300,
        "height": 80
      },
      "data_source": "disk_c_percent",
      "label": "C: Drive",
      "bar_color": "#00ff00",
      "background_color": "#1A1A1A",
      "text_color": "#00FFFF",
      "gradient": true,
      "gradient_end_color": "#ff0000",
      "border_width": 0,
      "border_color": "#FFFFFF",
      "corner_radius": 0,
      "show_percentage": true,
      "show_label": true
    },
    {
      "type": "progress_bar",
      "id": "gpu",
      "position": {
        "x": 10,
        "y": 400
      },
      "size": {
        "width": 300,
        "height": 70
      },
      "data_source": "gpu_percent",
      "label": "GPU",
      "bar_color": "#00ff00",
      "background_color": "#1A1A1A",
      "text_color": "#00FFFF",
      "gradient": true,
      "gradient_end_color": "#ff0000",
      "border_width": 0,
      "border_color": "#FFFFFF",
      "corner_radius": 0,
      "show_percentage": true,
      "show_label": true
    },
    {
      "type": "text",
      "id": "gpuT",
      "position": {
        "x": 52,
        "y": 400
      },
      "size": {
        "width": 300,
        "height": 50
      },
      "data_source": "gpu_temp",
      "font_size": 14,
      "font_family": "times",
      "bold": false,
      "italic": false,
      "color": "#FFFFFF",
      "align": "left"
    }
  ]
}