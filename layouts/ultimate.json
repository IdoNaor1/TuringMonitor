      "italic": false,
      "color": "#b388ff",
      "align": "center"
    },
    {
      "type": "text",
      "id": "disk_total_text",
      "position": {
        "x": 10,
        "y": 410
      },
      "size": {
        "width": 145,
        "height": 20
      },
      "data_source": "disk_c_total",
      "font_size": 14,
      "font_family": "arial",
      "bold": false,
      "italic": false,
      "color": "#888888",
      "align": "center"
    },
    {
      "type": "sparkline",
      "id": "network_download_sparkline",
      "position": {
        "x": 199,
        "y": 321
      },
      "size": {
        "width": 115,
        "height": 75
      },
      "data_source": "net_download_mbs",
      "label": "DL MB/s",
      "line_color": "#00d4ff",
      "fill_color": "#00d4ff40",
      "num_points": 25,
      "min_value": 0,
      "max_value": 1000,
      "show_current_value": true,
      "background_color": "#000000",
      "text_color": "#ffffff",
      "grid_color": "#222222",
      "display_component_name": false
    },
    {
      "type": "sparkline",
      "id": "diskWrite",
      "position": {
        "x": 201,
        "y": 402
      },
      "size": {
        "width": 115,
        "height": 75
      },
      "data_source": "disk_write_mbs",
      "label": "DW MB/s",
      "line_color": "#00d4ff",
      "fill_color": "#00d4ff40",
      "num_points": 30,
      "min_value": 0,
      "max_value": 6000,
      "show_current_value": true,
      "background_color": "#000000",
      "text_color": "#FFFFFF",
      "grid_color": "#333333",
      "display_component_name": false
    }
  ]
