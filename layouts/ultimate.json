{
  "name": "Ultimate Performance Dashboard",
  "description": "Advanced multi-metric display with component names and sparklines",
  "display": {
    "width": 320,
    "height": 480,
    "background_color": "#0a0a0a"
  },
  "widgets": [
    {
      "type": "text",
      "id": "time_display",
      "position": {
        "x": 10,
        "y": 10
      },
      "size": {
        "width": 300,
        "height": 50
      },
      "data_source": "time",
      "font_size": 48,
      "font_family": "arial",
      "bold": true,
      "color": "#00d4ff",
      "align": "center"
    },
    {
      "type": "text",
      "id": "date_display",
      "position": {
        "x": 10,
        "y": 62
      },
      "size": {
        "width": 300,
        "height": 20
      },
      "data_source": "date",
      "font_size": 14,
      "font_family": "arial",
      "color": "#888888",
      "align": "center"
    },
    {
      "type": "progress_bar",
      "id": "cpu_bar",
      "position": {
        "x": 10,
        "y": 95
      },
      "size": {
        "width": 300,
        "height": 55
      },
      "data_source": "cpu_percent",
      "label": "CPU",
      "bar_color": "#ff2a6d",
      "background_color": "#1a1a1a",
      "text_color": "#ffffff",
      "gradient": true,
      "gradient_end_color": "#ff8c00",
      "border_width": 1,
      "border_color": "#333333",
      "corner_radius": 5,
      "show_percentage": true,
      "show_label": true,
      "display_component_name": true
    },
    {
      "type": "text",
      "id": "cpu_temp_text",
      "position": {
        "x": 20,
        "y": 94
      },
      "size": {
        "width": 60,
        "height": 20
      },
      "data_source": "cpu_temp",
      "font_size": 16,
      "font_family": "arial",
      "bold": true,
      "italic": false,
      "color": "#ff2a6d",
      "align": "right"
    },
    {
      "type": "progress_bar",
      "id": "gpu_bar",
      "position": {
        "x": 10,
        "y": 175
      },
      "size": {
        "width": 300,
        "height": 55
      },
      "data_source": "gpu_percent",
      "label": "GPU",
      "bar_color": "#05ffa1",
      "background_color": "#1a1a1a",
      "text_color": "#ffffff",
      "gradient": true,
      "gradient_end_color": "#00d4ff",
      "border_width": 1,
      "border_color": "#333333",
      "corner_radius": 5,
      "show_percentage": true,
      "show_label": true,
      "display_component_name": true
    },
    {
      "type": "text",
      "id": "gpu_temp_text",
      "position": {
        "x": 30,
        "y": 173
      },
      "size": {
        "width": 60,
        "height": 20
      },
      "data_source": "gpu_temp",
      "font_size": 16,
      "font_family": "arial",
      "bold": true,
      "italic": false,
      "color": "#05ffa1",
      "align": "right"
    },
    {
      "type": "progress_bar",
      "id": "ram_bar",
      "position": {
        "x": 10,
        "y": 255
      },
      "size": {
        "width": 190,
        "height": 55
      },
      "data_source": "ram_percent",
      "label": "RAM",
      "bar_color": "#ffeb3b",
      "background_color": "#1a1a1a",
      "text_color": "#ffffff",
      "gradient": true,
      "gradient_end_color": "#ff9800",
      "border_width": 1,
      "border_color": "#333333",
      "corner_radius": 2,
      "show_percentage": true,
      "show_label": true,
      "display_component_name": true
    },
    {
      "type": "progress_bar",
      "id": "disk_bar",
      "position": {
        "x": 7,
        "y": 332
      },
      "size": {
        "width": 145,
        "height": 50
      },
      "data_source": "disk_c_percent",
      "label": "Samsung SSD 990 PRO",
      "bar_color": "#b388ff",
      "background_color": "#1a1a1a",
      "text_color": "#ffffff",
      "gradient": true,
      "gradient_end_color": "#ff80ab",
      "border_width": 1,
      "border_color": "#333333",
      "corner_radius": 2,
      "show_percentage": true,
      "show_label": true,
      "display_component_name": false
