{
  "name": "Gaming Performance - Gauges",
  "description": "Gaming-focused layout with gauge widgets for CPU, GPU, and temperatures",
  "display": {
    "width": 320,
    "height": 480,
    "background_color": "#0F0F0F"
  },
  "widgets": [
    {
      "type": "text",
      "id": "title",
      "position": {"x": 10, "y": 10},
      "size": {"width": 300, "height": 30},
      "data_source": "time",
      "font_size": 24,
      "font_family": "arial",
      "bold": true,
      "color": "#FF2A6D",
      "align": "center"
    },
    {
      "type": "gauge",
      "id": "cpu_usage_gauge",
      "position": {"x": 10, "y": 60},
      "size": {"width": 150, "height": 150},
      "data_source": "cpu_percent",
      "style": "donut",
      "arc_start": 135,
      "arc_end": 405,
      "min_value": 0,
      "max_value": 100,
      "show_value": true,
      "value_format": "CPU\n{:.0f}%",
      "show_ticks": false,
      "track_color": "#222222",
      "track_width": 12,
      "arc_width": 14,
      "needle_color": "#FF2A6D",
      "needle_width": 3,
      "text_color": "#FFFFFF",
      "color_zones": [
        {"range": [0, 60], "color": "#05FFA1"},
        {"range": [60, 85], "color": "#FFD700"},
        {"range": [85, 100], "color": "#FF2A6D"}
      ]
    },
    {
      "type": "gauge",
      "id": "gpu_usage_gauge",
      "position": {"x": 170, "y": 60},
      "size": {"width": 150, "height": 150},
      "data_source": "gpu_percent",
      "style": "donut",
      "arc_start": 135,
      "arc_end": 405,
      "min_value": 0,
      "max_value": 100,
      "show_value": true,
      "value_format": "GPU\n{:.0f}%",
      "show_ticks": false,
      "track_color": "#222222",
      "track_width": 12,
      "arc_width": 14,
      "needle_color": "#00D4FF",
      "needle_width": 3,
      "text_color": "#FFFFFF",
      "color_zones": [
        {"range": [0, 60], "color": "#00D4FF"},
        {"range": [60, 85], "color": "#FF8800"},
        {"range": [85, 100], "color": "#FF00AA"}
      ]
    },
    {
      "type": "gauge",
      "id": "cpu_temp_gauge",
      "position": {"x": 10, "y": 220},
      "size": {"width": 100, "height": 100},
      "data_source": "cpu_temp",
      "style": "arc",
      "arc_start": 180,
      "arc_end": 360,
      "min_value": 30,
      "max_value": 95,
      "show_value": true,
      "value_format": "{:.0f}°",
      "show_ticks": true,
      "tick_interval": 20,
      "track_color": "#1A1A1A",
      "track_width": 6,
      "arc_width": 8,
      "text_color": "#FFFFFF",
      "color_zones": [
        {"range": [30, 65], "color": "#00FFFF"},
        {"range": [65, 85], "color": "#FFD700"},
        {"range": [85, 95], "color": "#FF3333"}
      ]
    },
    {
      "type": "text",
      "id": "cpu_temp_label",
      "position": {"x": 10, "y": 325},
      "size": {"width": 100, "height": 20},
      "data_source": "cpu_name",
      "font_size": 8,
      "color": "#888888",
      "align": "center"
    },
    {
      "type": "gauge",
      "id": "gpu_temp_gauge",
      "position": {"x": 115, "y": 220},
      "size": {"width": 100, "height": 100},
      "data_source": "gpu_temp",
      "style": "arc",
      "arc_start": 180,
      "arc_end": 360,
      "min_value": 30,
      "max_value": 90,
      "show_value": true,
      "value_format": "{:.0f}°",
      "show_ticks": true,
      "tick_interval": 20,
      "track_color": "#1A1A1A",
      "track_width": 6,
      "arc_width": 8,
      "text_color": "#FFFFFF",
      "color_zones": [
        {"range": [30, 70], "color": "#00FFAA"},
        {"range": [70, 82], "color": "#FF8800"},
        {"range": [82, 90], "color": "#FF0044"}
      ]
    },
    {
      "type": "text",
      "id": "gpu_temp_label",
      "position": {"x": 115, "y": 325},
      "size": {"width": 100, "height": 20},
      "data_source": "gpu_name",
      "font_size": 8,
      "color": "#888888",
      "align": "center"
    },
    {
      "type": "gauge",
      "id": "ram_usage_gauge",
      "position": {"x": 220, "y": 220},
      "size": {"width": 100, "height": 100},
      "data_source": "ram_percent",
      "style": "needle",
      "arc_start": 180,
      "arc_end": 360,
      "min_value": 0,
      "max_value": 100,
      "show_value": true,
      "value_format": "{:.0f}%",
      "show_ticks": true,
      "tick_interval": 25,
      "track_color": "#1A1A1A",
      "track_width": 4,
      "needle_width": 3,
      "text_color": "#FFFFFF",
      "color_zones": [
        {"range": [0, 70], "color": "#00CCFF"},
        {"range": [70, 90], "color": "#FFAA00"},
        {"range": [90, 100], "color": "#FF0066"}
      ]
    },
    {
      "type": "text",
      "id": "ram_label",
      "position": {"x": 220, "y": 325},
      "size": {"width": 100, "height": 20},
      "data_source": "ram_name",
      "font_size": 8,
      "color": "#888888",
      "align": "center"
    },
    {
      "type": "progress_bar",
      "id": "disk_bar",
      "position": {"x": 10, "y": 360},
      "size": {"width": 300, "height": 50},
      "data_source": "disk_c_percent",
      "label": "SSD",
      "bar_color": "#05FFA1",
      "background_color": "#222222",
      "text_color": "#FFFFFF",
      "gradient": true,
      "gradient_end_color": "#00D4FF",
      "corner_radius": 5,
      "show_percentage": true,
      "show_label": true
    },
    {
      "type": "text",
      "id": "network_upload",
      "position": {"x": 10, "y": 425},
      "size": {"width": 145, "height": 25},
      "data_source": "net_upload_mbs",
      "font_size": 14,
      "color": "#FF2A6D",
      "align": "left"
    },
    {
      "type": "text",
      "id": "network_download",
      "position": {"x": 165, "y": 425},
      "size": {"width": 145, "height": 25},
      "data_source": "net_download_mbs",
      "font_size": 14,
      "color": "#05FFA1",
      "align": "right"
    },
    {
      "type": "text",
      "id": "hostname",
      "position": {"x": 160, "y": 455},
      "size": {"width": 300, "height": 25},
      "data_source": "hostname",
      "font_size": 10,
      "color": "#444444",
      "align": "center"
    }
  ]
}
